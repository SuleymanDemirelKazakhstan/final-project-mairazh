    	#room{
        box-shadow: 0 5px 10px 0 rgba(28,24,25,.15);
        width:300px;
        background-color: white;
        padding: 20px 20px 30px;
        border-radius: 10px;
        display: flex;
        flex-direction: column;
        align-items: center;
